extends ui-kit.pug

block content
  div
    div.form-elements
      div.form-section
        div.form-group
          div.form-item
            div.form-field
              label.form-field__label
                | Text Field
              span.form-field__marker Default
              input.form-field__field.text-field(type='text', placeholder='Email')
          div.form-item
            div.form-field.hover-focus
              label.form-field__label
                | Text Field
              span.form-field__marker Hover / Focus
              input.form-field__field.text-field.text-field_hover(type='text', value='This is pretty awesome')
          div.form-item
            div.form-field
              label.form-field__label
                | Dropdown
              span.form-field__marker Defualt
              select.form-field__field.drop-down
                option(selected='true') Сколько гостей
          div.form-item
            div.form-field
              label.form-field__label
                | masked text field
              span.form-field__marker Default
              input.form-field__field.text-field(type='text', placeholder='ДД.ММ.ГГГГ')

        div.form-group
          div.form-item
            div.form-items-horizontally
              div.form-item-horizontal
                div.form-field
                  label.form-field__label date Dropdown
                  select.form-field__field.drop-down
                    option(selected='true') ДД.ММ.ГГГГ
                div.form-field
                  label.form-field__label date Dropdown
                  select.form-field__field.drop-down
                    option(selected='true') 19.08.2019

        div.form-group
          div.form-item
            div.form-field
              label.form-field__label filter date dropdown
              select.form-field__field.drop-down
                option(selected='true') 19 авг - 23 авг

        div.form-group
          div.form-item
            div.form-field
              label.form-field__label subscription text field
              input.form-field__field.text-field.text-field_subscription(type='text', placeholder='Email')

      div.form-section
        div.form-group
          div.form-item
            div.form-field
              label.form-field__label Checkbox Buttons
              label #[input.form-field__field.text-field(type='checkbox')] Можно курить
              label #[input.form-field__field.text-field(type='checkbox', checked='true')] Можно с питомцами
              label #[input.form-field__field.text-field(type='checkbox', checked='true')] Можно пригласить гостей (до 10 человек)

        div.form-group
          div.form-item
            div.form-field
              label.form-field__label Radio Buttons
              label #[input.form-field__field.text-field(type='radio', checked='true', name='sex')] Мужчина
              label #[input.form-field__field.text-field(type='radio', name='sex')] Женщина

        div.form-group
          div.form-item
            div.form-field
              label.form-field__label Toggle
              label #[input.form-field__field.text-field(type='checkbox', checked='true')] Получать спецпредложения
              label #[input.form-field__field.text-field(type='checkbox')] Получать спецпредложения


        div.form-group
          div.form-item
            div.form-field
              label.form-field__label like button
              label #[input.form-field__field.text-field(type='checkbox')] 2
              label #[input.form-field__field.text-field(type='checkbox', checked='true')] 12

        div.form-group
          div.form-item
            div.form-field
              label.form-field__label rate button
              p 4#{'/'}5
              p 5#{'/'}5

      div.form-section
        div.form-group
          div.form-item
            div.form-field
              label.form-field__label Range Slider
              div.value 5 000₽ - 10 000₽
              div.slider

        div.form-group
          div.form-item
            div.form-field
              label.form-field__label buttons
              button CLICK ME
              button CLICK ME
              button CLICK ME
              button CLICK ME
              a(href='#') CLICK ME
              a(href='#') CLICK ME
              button.long перейти к оплате

        div.form-group
          div.form-item
            div.form-field
              label.form-field__label pagination
              ul.pages
                li.current 1
                li 2
                li 3
                li ...
                li 15
                li.next next
              div.annotation 1 – 12 из 100+ вариантов аренды
